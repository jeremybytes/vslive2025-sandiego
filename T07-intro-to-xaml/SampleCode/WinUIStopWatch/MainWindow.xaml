<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinUIStopWatch.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUIStopWatch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WinUI3 Stop Watch">
    <Grid x:Name="LayoutGrid" Background="#FF333333">
        <Grid.Resources>
            <local:Ticker x:Key="LocalTicker"/>
            <Style TargetType="Button">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Background" Value="#FF333333"/>
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Template" Value="{StaticResource AppButton}" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Output Display -->
        <TextBlock x:Name="IntervalDisplay"
                   Grid.Row="0"
                   FontSize="64"
                   Foreground="White"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   DataContext="{StaticResource LocalTicker}"
                   Text="{Binding DisplayInterval}" />

        <!-- Button Panel -->
        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="10">
            <Button x:Name="StartButton"
                    Content="Start"
                    Click="StartButton_Click">
            </Button>

            <Button x:Name="StopButton"
                    Content="Stop"
                    Click="StopButton_Click"/>

            <Button x:Name="ClearButton"
                    Content="Clear"
                    Click="ClearButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
